@page "{id:int}"
@model LePhuocDieuMy_PRN232_A01_FE.Pages.Tags.UpdateModel
@{
    ViewData["Title"] = "Edit Tag";
}

<h2>Edit Tag</h2>

<form method="post">
    <input type="hidden" asp-for="UpdatedTag.TagId" />
    <div class="form-group">
        <label asp-for="UpdatedTag.TagName"></label>
        <input asp-for="UpdatedTag.TagName" class="form-control" />
        <span asp-validation-for="UpdatedTag.TagName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UpdatedTag.Note"></label>
        <textarea asp-for="UpdatedTag.Note" class="form-control"></textarea>
        <span asp-validation-for="UpdatedTag.Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
