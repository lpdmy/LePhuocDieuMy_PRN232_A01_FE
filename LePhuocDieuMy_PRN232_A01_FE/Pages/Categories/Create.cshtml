@page
@model CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<h2>Create Category</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<form method="post">
    <div class="form-group">
        <label asp-for="NewCategory.CategoryName"></label>
        <input asp-for="NewCategory.CategoryName" class="form-control" />
        <span asp-validation-for="NewCategory.CategoryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewCategory.CategoryDescription"></label>
        <textarea asp-for="NewCategory.CategoryDescription" class="form-control"></textarea>
        <span asp-validation-for="NewCategory.CategoryDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewCategory.ParentCategoryId"></label>
        <select asp-for="NewCategory.ParentCategoryId" class="form-control"
                asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))">
            <option value="">-- None --</option>
        </select>
        <span asp-validation-for="NewCategory.ParentCategoryId" class="text-danger"></span>
    </div>


    <div class="form-group form-check">
        <input asp-for="NewCategory.IsActive" class="form-check-input" />
        <label asp-for="NewCategory.IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div asp-validation-summary="All" class="text-danger"></div>
