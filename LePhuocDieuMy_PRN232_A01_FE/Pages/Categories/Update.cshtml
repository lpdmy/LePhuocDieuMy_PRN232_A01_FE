@page "{id:int}"
@model UpdateModel
@{
    ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="UpdatedCategory.CategoryName"></label>
        <input asp-for="UpdatedCategory.CategoryName" class="form-control" />
        <span asp-validation-for="UpdatedCategory.CategoryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UpdatedCategory.CategoryDescription"></label>
        <textarea asp-for="UpdatedCategory.CategoryDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="UpdatedCategory.ParentCategoryId"></label>
        <input asp-for="UpdatedCategory.ParentCategoryId" type="number" class="form-control" />
    </div>

    <div class="form-check">
        <input asp-for="UpdatedCategory.IsActive" class="form-check-input" />
        <label asp-for="UpdatedCategory.IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
