@page
@model IndexModel
@{
    ViewData["Title"] = "Account List";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-people-fill me-2"></i>Account List</h4>
        <a asp-page="./Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle me-1"></i> New Account
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                        <th scope="col" style="width: 160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var acc in Model.Accounts)
                    {
                        <tr>
                            <td class="text-center fw-semibold">@acc.AccountId</td>
                            <td>@acc.AccountName</td>
                            <td>@acc.AccountEmail</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @(acc.AccountRole == 1 ? "Staff" : acc.AccountRole == 2 ? "Lecturer" : "Unknown")
                                </span>

                            </td>
                            <td class="text-center">
                                <a asp-page="./Edit" asp-route-id="@acc.AccountId"
                                   class="btn btn-sm btn-outline-primary me-2" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@acc.AccountId"
                                   class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
