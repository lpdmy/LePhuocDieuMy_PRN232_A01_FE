@page
@model CreateModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Create Account</h4>
        <a asp-page="Index" class="btn btn-light btn-sm">
            <i class="bi bi-arrow-left-circle me-1"></i>Back to List
        </a>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>Please correct the error below and try again: @ViewBag.Error</div>
        </div>
    }
    <div class="card-body">
        <form method="post" novalidate>
            <div class="mb-3">
                <label asp-for="NewAccount.AccountName" class="form-label"></label>
                <input asp-for="NewAccount.AccountName" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="NewAccount.AccountName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewAccount.AccountEmail" class="form-label"></label>
                <input asp-for="NewAccount.AccountEmail" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="NewAccount.AccountEmail" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewAccount.AccountPassword" class="form-label"></label>
                <input asp-for="NewAccount.AccountPassword" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="NewAccount.AccountPassword" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="NewAccount.AccountRole" class="form-label"></label>
                <select asp-for="NewAccount.AccountRole" class="form-select">
                    <option value="">-- Select Role --</option>
                    <option value="1">Staff</option>
                    <option value="2">Lecturer</option>
                </select>
                <span asp-validation-for="NewAccount.AccountRole" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-circle me-1"></i>Create
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
